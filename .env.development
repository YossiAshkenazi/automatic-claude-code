# Development Environment Configuration
# Visual Agent Management Platform

# === APPLICATION CONFIGURATION ===
NODE_ENV=development
DEBUG=*
PORT=3000

# === VISUAL DASHBOARD ===
DASHBOARD_PORT=6011
DASHBOARD_HOST=localhost
DASHBOARD_DEBUG=true
REACT_APP_API_BASE_URL=http://localhost:4005
REACT_APP_WS_BASE_URL=ws://localhost:4005

# === PYTHON ORCHESTRATOR ===
PYTHON_API_PORT=4005
PYTHON_API_HOST=localhost
PYTHON_DEBUG=true
PYTHONPATH=./python-sdk
PYTHON_ENV=development

# === HOOK SYSTEM ===
HOOKS_ENABLED=true
HOOKS_PORT=4000
HOOKS_DASHBOARD_PORT=6001
HOOKS_DEBUG=true
OBSERVABILITY_SERVER_URL=http://localhost:4000

# === DATABASE CONFIGURATION ===
DB_TYPE=sqlite
DB_PATH=./data/dev.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=visual_agent_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password

# === DEVELOPMENT FEATURES ===
HOT_RELOAD=true
AUTO_RESTART=true
VERBOSE_LOGGING=true
DEV_TOOLS=true
SOURCE_MAPS=true

# === PERFORMANCE MONITORING ===
PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true
CPU_MONITORING=true
HEALTH_CHECK_INTERVAL=5000

# === SECURITY (Development) ===
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:6011
AUTH_DISABLED=true
CSRF_DISABLED=true

# === CLAUDE CLI CONFIGURATION ===
CLAUDE_CLI_TIMEOUT=300000
CLAUDE_CLI_MAX_RETRIES=3
CLAUDE_CLI_DEBUG=true
CLAUDE_CLI_MODEL=sonnet

# === MULTI-AGENT SYSTEM ===
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=300
AGENT_MEMORY_LIMIT=512
AGENT_HEALTH_CHECK=10

# === WEBSOCKET CONFIGURATION ===
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# === DEVELOPMENT PATHS ===
LOG_DIRECTORY=./logs/dev
TEMP_DIRECTORY=./temp/dev
UPLOADS_DIRECTORY=./uploads/dev
BACKUP_DIRECTORY=./backups/dev