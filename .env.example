# Automatic Claude Code - Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=acc_secure_password_123
DATABASE_URL=postgresql://acc_user:acc_secure_password_123@postgres:5432/dual_agent_monitor

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
WEBHOOK_SECRET=your_webhook_secret_here_change_in_production

# Application Configuration
NODE_ENV=production
PORT=4001

# Monitoring Frontend
VITE_API_URL=http://localhost:4001
VITE_WS_URL=ws://localhost:4001

# Docker Configuration
COMPOSE_PROJECT_NAME=automatic-claude-code

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Webhook Integrations (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#dev-notifications
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Dual Agent Monitor

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_RECIPIENTS=admin@yourdomain.com

# SSL Configuration (for production with nginx)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Performance Tuning
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=30000
REDIS_MAX_MEMORY=256mb