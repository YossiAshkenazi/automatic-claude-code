# Automatic Claude Code - Environment Configuration

# Database Configuration
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
DATABASE_URL=postgresql://acc_user:CHANGE_THIS_PASSWORD_IN_PRODUCTION@postgres:5432/dual_agent_monitor

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=CHANGE_THIS_SECRET_MUST_BE_RANDOM_32_CHARS_MIN
WEBHOOK_SECRET=CHANGE_THIS_SECRET_MUST_BE_RANDOM_32_CHARS_MIN

# Application Configuration
NODE_ENV=production
PORT=4005

# Monitoring Frontend
VITE_API_URL=http://localhost:4005
VITE_WS_URL=ws://localhost:4005
VITE_FRONTEND_PORT=6011

# Docker Configuration
COMPOSE_PROJECT_NAME=automatic-claude-code

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Webhook Integrations (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#dev-notifications
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Dual Agent Monitor

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_RECIPIENTS=admin@yourdomain.com

# SSL Configuration (for production with nginx)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Performance Tuning
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=30000
REDIS_MAX_MEMORY=256mb