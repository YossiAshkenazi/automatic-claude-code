# Hook System & Observability Server
FROM node:18-alpine AS hooks-development

# Install system dependencies
RUN apk add --no-cache curl bash git

# Set working directory
WORKDIR /app

# Install global dependencies
RUN npm install -g nodemon

# Copy package file for dependencies
COPY package*.json ./
RUN npm install

# Copy hook scripts and observability server
COPY .claude/hooks ./hooks
COPY config/monitoring ./monitoring

# Expose ports for hooks and dashboard
EXPOSE 4000 6001

# Set environment variables
ENV NODE_ENV=development
ENV HOOKS_PORT=4000
ENV HOOKS_DASHBOARD_PORT=6001

# Create volume mount points
VOLUME ["/app/hooks", "/app/logs"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:4000/health || exit 1

# Start observability server with nodemon for development
CMD ["nodemon", "--watch", "hooks", "--watch", "monitoring", "monitoring/monitoring-server.js"]