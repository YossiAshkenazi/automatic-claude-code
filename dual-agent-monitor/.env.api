# API Server Environment Configuration
# This file configures the API server deployment

# Container Configuration
API_CONTAINER_NAME=dual-agent-api
POSTGRES_CONTAINER_NAME=dual-agent-postgres
NETWORK_NAME=dual-agent-network

# Database Configuration (matches existing PostgreSQL)
DB_TYPE=postgresql
POSTGRES_HOST=postgres
POSTGRES_PORT=5434
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dual_agent_secure_pass_2025
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_SSL=false

# API Server Configuration
NODE_ENV=production
WEBSOCKET_SERVER_PORT=4005
API_BASE_URL=http://localhost:4005/api

# Security Configuration
JWT_SECRET=dual-agent-jwt-secret-key-minimum-32-chars-2025
SESSION_SECRET=dual-agent-session-secret-key-minimum-32-chars-2025

# Optional Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dual_agent_redis_pass_2025

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# External URLs (for CORS and client connections)
VITE_WS_URL=ws://localhost:4005
VITE_API_BASE_URL=http://localhost:4005/api