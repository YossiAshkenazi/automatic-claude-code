# Database Configuration
# Choose 'sqlite' for local development or 'postgresql' for production
DB_TYPE=sqlite

# SQLite Configuration (for local development)
SQLITE_FILENAME=./data/dual-agent-monitor.db
SQLITE_WAL=true

# PostgreSQL Configuration (for production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dual_agent_secure_pass_2025
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Server Configuration
PORT=4005
WEBSOCKET_SERVER_PORT=4005
NODE_ENV=development

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Security
CORS_ORIGIN=http://localhost:6011,http://localhost:5173
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/dual-agent-monitor.log