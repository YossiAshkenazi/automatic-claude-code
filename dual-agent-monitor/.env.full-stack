# Full Stack Dual-Agent Monitoring System Environment Configuration
# This file configures all services in the unified deployment

# Database Configuration
DB_TYPE=postgresql
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dual_agent_secure_pass_2025
POSTGRES_MAX_CONNECTIONS=20

# External database access (for development/admin tools)
POSTGRES_EXTERNAL_PORT=5434

# Application Database URL (internal container communication)
DATABASE_URL=postgresql://postgres:dual_agent_secure_pass_2025@postgres:5432/dual_agent_monitor

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dual_agent_redis_pass_2025
REDIS_EXTERNAL_PORT=6380

# Security Configuration
JWT_SECRET=dual-agent-jwt-secret-key-minimum-32-chars-2025
SESSION_SECRET=dual-agent-session-secret-key-minimum-32-chars-2025

# API Server Configuration
WEBSOCKET_SERVER_PORT=4005
API_BASE_URL=http://api-server:4005/api

# Frontend Configuration
FRONTEND_PORT=6011
VITE_WS_URL=ws://localhost:6011/ws
VITE_API_BASE_URL=http://localhost:6011/api

# Container Environment
NODE_ENV=production

# Performance Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Container Names
POSTGRES_CONTAINER_NAME=dual-agent-postgres
REDIS_CONTAINER_NAME=dual-agent-redis
API_CONTAINER_NAME=dual-agent-api
FRONTEND_CONTAINER_NAME=dual-agent-frontend
NGINX_CONTAINER_NAME=dual-agent-nginx

# Network Configuration
NETWORK_NAME=dual-agent-network

# pgAdmin Configuration (optional - use with --profile admin)
PGADMIN_EMAIL=admin@dual-agent-monitor.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8082

# Build Configuration
VERSION=latest
BUILD_TIME=2024-09-01