# PostgreSQL Docker Environment Configuration
# This file configures PostgreSQL for the dual-agent monitoring system

# Database Configuration
DB_TYPE=postgresql
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dual_agent_secure_pass_2025
POSTGRES_MAX_CONNECTIONS=20

# Application Database URL
DATABASE_URL=postgresql://postgres:dual_agent_secure_pass_2025@localhost:5434/dual_agent_monitor

# Security Configuration
JWT_SECRET=dual-agent-jwt-secret-key-minimum-32-chars-2025
SESSION_SECRET=dual-agent-session-secret-key-minimum-32-chars-2025

# WebSocket and API Configuration
WEBSOCKET_SERVER_PORT=4005
VITE_WS_URL=ws://localhost:4005
VITE_API_BASE_URL=http://localhost:4005/api

# Node Environment
NODE_ENV=development

# Optional Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dual_agent_redis_pass_2025

# Container Configuration
POSTGRES_CONTAINER_NAME=dual-agent-postgres
REDIS_CONTAINER_NAME=dual-agent-redis
NETWORK_NAME=dual-agent-network