# Production Environment Configuration for Dual-Agent Monitor
# This file provides default values for production deployment

# Application Configuration
NODE_ENV=production
PORT=4005
WEBSOCKET_SERVER_PORT=4005

# Database Configuration
DB_TYPE=postgresql
DATABASE_URL=postgresql://postgres:dual_agent_secure_pass_2025@postgres:5432/dual_agent_monitor

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dual_agent_secure_pass_2025

# Security Configuration
JWT_SECRET=dual-agent-jwt-secret-key-minimum-32-chars-2025
SESSION_SECRET=dual-agent-session-secret-key-minimum-32-chars-2025

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=dual_agent_redis_pass_2025

# Logging
LOG_LEVEL=info

# Monitoring Configuration
GRAFANA_PASSWORD=admin

# Build Configuration (for Docker builds)
VERSION=latest
BUILD_TIME=production