# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Application Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Domain and SSL Configuration
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/dual_agent_monitor
POSTGRES_DB=dual_agent_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=your-secure-redis-password

# Security Configuration
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
SESSION_SECRET=your-session-secret-minimum-32-characters-long
CSRF_SECRET=your-csrf-secret-minimum-32-characters-long

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=your-grafana-admin-password

# Logging Configuration
LOG_LEVEL=info
FLUENTD_ENABLED=true
ELASTICSEARCH_URL=http://elasticsearch:9200

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
S3_BACKUP_REGION=us-east-1

# Email Configuration (optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# External Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Cloud Provider Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Version Information
VERSION=1.0.0
BUILD_TIME=2025-01-01T00:00:00Z
GIT_COMMIT=main